require "yaml"
require File.expand_path(File.join(File.dirname(__FILE__), "..", "lib/knx"))

groupaddresses = YAML::load(
  File.open(
    File.expand_path(
      File.join(File.dirname(__FILE__), './groupaddresses' )
      )
    )
  )

if ARGV[1]
  value = ARGV[1].to_i
else
  value = 1
end
#puts "value: #{value}"

if groupaddresses.has_key? ARGV[0]
  groupaddress = groupaddresses[ARGV[0]]
else
  STDERR.puts "Groupaddress (#{ARGV[0]}) not found in your groupaddress file!"
  exit 1
end
#puts "send #{value} to #{ARGV[0]}: #{groupaddress}"
# send value
KNX("ip:10.10.10.142") do |knx|
  if groupaddress.respond_to? :each
    groupaddress.each do |ga|
      knx.write_to ga, value
    end
  else
    knx.write_to groupaddress, value
  end
end
groupaddress = if groupaddress.respond_to? :each
    groupaddress.join ", "
  else
    groupaddress
  end
puts "It's #{DateTime.parse(Time.now.to_s)} and #{value} was sent to #{ARGV[0]} (#{groupaddress})"
